{
    "type": "object",
    "required": [
      "InvoiceNumber", "Date", "DueDate", "PaymentTerms",
      "SupplierName", "BuyerName", "DiscountTotal", "ChangesTotal",
      "CurrencyCode", "TotalGrossAmount", "LineItems"
    ],
    "properties": {
      "InvoiceNumber": {
        "type": ["string", "null"],
        "description": "The unique identifier for the invoice."
      },
      "Date": {
        "type": ["string", "null"],
        "format": "date",
        "description": "The date when the invoice was issued (YYYY-MM-DD)."
      },
      "DueDate": {
        "type": ["string", "null"],
        "format": "date",
        "description": "The payment due date (YYYY-MM-DD)."
      },
      "PaymentTerms": {
        "type": ["string", "null"],
        "description": "Payment terms between supplier and buyer."
      },
      "SupplierName": {
        "type": ["string", "null"],
        "description": "Name of the supplier issuing the invoice."
      },
      "BuyerName": {
        "type": ["string", "null"],
        "description": "Name of the buyer receiving the invoice."
      },
      "DiscountTotal": {
        "type": ["number", "null"],
        "description": "Total discount applied to the invoice."
      },
      "ChangesTotal": {
        "type": ["number", "null"],
        "description": "Additional charges applied to the invoice."
      },
      "CurrencyCode": {
        "type": ["string", "null"],
        "description": "Currency code used (e.g., USD, EUR)."
      },
      "TotalGrossAmount": {
        "type": ["number", "null"],
        "description": "Total gross amount including taxes and discounts."
      },
      "LineItems": {
        "type": "array",
        "minItems": 0,
        "description": "List of line items in the invoice.",
        "items": {
          "type": "object",
          "required": ["Description", "Quantity", "TotalAmount", "UnitCode", "UnitPrice"],
          "properties": {
            "Description": {
              "type": ["string", "null"],
              "description": "Description of the item or service."
            },
            "Quantity": {
              "type": ["number", "null"],
              "description": "Quantity of the item or service."
            },
            "TotalAmount": {
              "type": ["number", "null"],
              "description": "Total amount for the line item."
            },
            "UnitCode": {
              "type": ["string", "null"],
              "description": "Unit of measurement (e.g., kg, pcs)."
            },
            "UnitPrice": {
              "type": ["number", "null"],
              "description": "Price per unit."
            }
          }
        }
      }
    }
  }
  